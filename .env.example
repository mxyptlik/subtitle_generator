# Production Environment Configuration
# Copy this to .env and customize as needed

# OpenAI API Key (required for translation features)
OPENAI_API_KEY=your_openai_api_key_here

# Environment
NODE_ENV=production
PYTHONPATH=/app

# Logging
LOG_LEVEL=info

# Security (change these in production!)
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# Database (if needed for future features)
DATABASE_URL=sqlite:///./subtitle_generator.db

# File Storage
MAX_UPLOAD_SIZE=500000000  # 500MB
UPLOAD_DIR=/app/uploads
OUTPUT_DIR=/app/outputs

# YouTube Download Settings
YOUTUBE_MAX_RESOLUTION=1080
YOUTUBE_RATE_LIMIT=1048576  # 1MB/s
YOUTUBE_MAX_RETRIES=3
YOUTUBE_TIMEOUT=1800  # 30 minutes

# Whisper Settings
WHISPER_MODEL=base
WHISPER_DEVICE=cpu

# Server Settings
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000
GRADIO_HOST=0.0.0.0
GRADIO_PORT=7860

# CORS Settings
CORS_ORIGINS=http://localhost:7860,http://127.0.0.1:7860